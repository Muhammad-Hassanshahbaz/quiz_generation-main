{
    "version": 2,
    "builds": [
      {
        "src": "quiz_generation.py",
        "use": "@vercel/python",
        "config": { 
          "runtime": "python3.13"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "quiz_generation.py"
      }
    ],
    "rewrites": [{ "source": "/(.*)", "destination": "/" }
]

  }